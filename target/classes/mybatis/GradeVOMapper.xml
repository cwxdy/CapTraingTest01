<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.demo.dao.GradeVOMapper">
	<resultMap type="com.example.demo.bean.vo.GradeVO" id="gradeResultMap">
		<result column="grade_id" property="gradeId" jdbcType="VARCHAR" />
		<result column="grade_name" property="gradeName" jdbcType="VARCHAR" />
		<collection column="grade_id" property="students" select="com.example.demo.dao.StudentVOMapper.getStudentListByGradeId"></collection>
	</resultMap>
	
	<insert id="addGrade" parameterType="com.example.demo.bean.vo.GradeVO">
		INSERT INTO grade VALUES(#{gradeId},#{gradeName})
	</insert>
	
	<update id="updateGrade" parameterType="com.example.demo.bean.vo.GradeVO">
		UPDATE grade SET grade_name = #{gradeName} WHERE grade_id = #{gradeId}
	</update>
	
	<delete id="deleteGradeById" parameterType="java.lang.String">
		DELETE FROM grade WHERE grade_id = #{gradeId}
	</delete>
	
	<select id="getGradeById" resultMap="gradeResultMap">
		SELECT * FROM grade WHERE grade_id = #{gradeId}
	</select>
	
	<select id="getGradeList" resultMap="gradeResultMap">
		SELECT * From grade
	</select>
</mapper>